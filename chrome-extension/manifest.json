{
    "manifest_version": 3,
    "name": "URL Poster",
    "version": "1.0",
    "description": "Send the current tab's URL to a server.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    }
}